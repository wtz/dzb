extends ./layout

block content
   each cat in categories
      h2(style="border-bottom:1px solid #ccc")
        a(href='/results?cat=#{cat._id}') #{cat.name}
      table#xinwenyulan
         each item in cat.post   
          tr
            td= item.title
            td   
              a(href="/admin/post/edit/#{item._id}") 编辑
            td
              a(href="/admin/post/delete/#{item._id}") 删除